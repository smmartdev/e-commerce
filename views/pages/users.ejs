<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/users.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        .button {
            padding: 8px 16px;
            margin: 4px;
            border: none;
            color: white;
            cursor: pointer;
        }
        .delete-button {
            background-color: red;
        }
        .make-seller-button {
            background-color: green;
        }
    </style>
</head>
<body>
<%- include('../partials/header') %>
   
    <h1>Users List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <!-- Delete User Button -->
                        <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="button delete-button">Delete User</button>
                        </form>
                        
                        <!-- Make User Seller Button -->
                        <form action="/users/makeSeller/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="button make-seller-button">Make User Seller</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
